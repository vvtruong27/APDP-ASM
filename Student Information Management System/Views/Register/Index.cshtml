@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div style="color: red;">@ViewBag.ErrorMessage</div>
}

@if (ViewBag.SuccessMessage != null)
{
    <div style="color: green;">@ViewBag.SuccessMessage</div>
}

<form method="post" action="/Register/Create">
    <div>
        <label for="userId">User ID:</label>
        <input type="text" id="userId" name="UserID" required />
    </div>
    <div>
        <label for="username">Username:</label>
        <input type="text" id="username" name="Username" required />
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="Password" required />
    </div>
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" required />
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" required />
    </div>
    <div>
        <label for="phone">Phone:</label>
        <input type="text" id="phone" name="Phone" required />
    </div>
    <div>
        <label for="role">Role:</label>
        <select id="role" name="Role">
            <option value="Administrator">Administrator</option> <!-- Chỉ cho phép Administrator -->
            <option value="Faculty">Faculty</option> <!-- Không được phép -->
            <option value="Student">Student</option> <!-- Không được phép -->
        </select>
    </div>
    <button type="submit">Register</button>
</form>
