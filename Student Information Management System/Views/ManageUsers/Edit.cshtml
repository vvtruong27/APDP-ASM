@model StudentInformationManagementSystem.Models.User

@{
    ViewData["Title"] = "Edit User";
    var roles = new List<SelectListItem>
    {
        new SelectListItem { Value = "Administrator", Text = "Administrator" },
        new SelectListItem { Value = "Faculty", Text = "Faculty" },
        new SelectListItem { Value = "Student", Text = "Student" }
    };
}

<h2 class="text-center">Edit User Information</h2>

<div class="container mt-4">
    <form method="post" action="/ManageUsers/Edit">
        <input type="hidden" name="UserID" value="@Model.UserID" />

        <!-- Username -->
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="Username" value="@Model.Username" class="form-control" required />
        </div>

        <!-- Password -->
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="Password" value="@Model.Password" class="form-control" required />
        </div>

        <!-- Name -->
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="Name" value="@Model.Name" class="form-control" required />
        </div>

        <!-- Email -->
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="Email" value="@Model.Email" class="form-control" required />
        </div>

        <!-- Phone -->
        <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="text" id="phone" name="Phone" value="@Model.Phone" class="form-control" required />
        </div>

        <!-- Role -->
        <div class="form-group">
            <label for="role">Role:</label>
            <select asp-for="Role" asp-items="@roles" class="form-control"></select>
        </div>

        <!-- Submit vÃ  Cancel Buttons -->
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/Dashboard/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
